<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">     
  
   <item android:id="@android:id/background">     
      <shape>
         <corners android:radius="10dip" /> 
         <gradient     
             android:startColor="#525255"  
			 android:centerColor="#525255" 
			 android:endColor="#525255"
			 android:angle="45"   
             android:centerY="0.45" />     
      </shape>     
   </item>  
      
   <item android:id="@android:id/secondaryProgress">     
       <clip>     
          <shape>     
	         <corners android:radius="10dip" /> 
              <gradient  
                  android:startColor="#747477"  
				  android:centerColor="#747477" 
				  android:endColor="#747477"
				  android:angle="45" 
                  android:centerY="0.45" />     
          </shape>     
       </clip>     
   </item> 
      
   <item android:id="@android:id/progress">     
       <clip>     
          <shape>     
	         <corners android:radius="10dip" /> 
              <gradient     
                  android:startColor="#FF8B00"  
				  android:centerColor="#FF8B00" 
				  android:endColor="#FF8B00"
				  android:angle="45"    
                  android:centerY="0.45" />     
          </shape>     
       </clip>     
   </item>     
   
       
 </layer-list>  






