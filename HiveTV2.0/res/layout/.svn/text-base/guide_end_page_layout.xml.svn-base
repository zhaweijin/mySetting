<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide_05"
    android:focusable="false" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/v_gudie_start"
            android:layout_width="221dip"
            android:layout_height="62dip"
            android:layout_marginBottom="50dip"
            android:background="@drawable/gudie_select_list_focus_bg"
            android:focusable="true"
            android:gravity="center" >

            <TextView
                android:layout_width="211dip"
                android:layout_height="52dip"
                android:gravity="center"
                android:text="开始体验"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/v_gudie_setting"
            android:layout_width="221dip"
            android:layout_height="62dip"
            android:layout_marginBottom="50dip"
            android:layout_marginLeft="20dip"
            android:background="@drawable/gudie_select_list_focus_bg"
            android:focusable="true"
            android:gravity="center" >

            <TextView
                android:layout_width="211dip"
                android:layout_height="52dip"
                android:gravity="center"
                android:text="进入设置"
                android:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>