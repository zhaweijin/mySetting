<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_menu_app"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:paddingTop="15dip" >

    <TextView
        android:id="@+id/navigation_tab_app_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/navigation_tab_app_text"
        android:textColor="@android:color/white"
        android:textSize="26.64sp" />

    <ImageView
        android:id="@+id/navigation_tab_app_fade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_tab_fade_bg"
        android:contentDescription="@string/app_name"
        android:nextFocusLeft="@id/navigation_tab_app_fade"
        android:visibility="invisible" />

</RelativeLayout>