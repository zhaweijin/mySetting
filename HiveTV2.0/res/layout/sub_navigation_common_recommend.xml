        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/sub_navigation_common_recommend_external_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/sub_navigation_tab_focus"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusLeft="@id/sub_navigation_common_recommend_setting_text_layout" >

                <TextView
                    android:id="@+id/sub_navigation_common_recommend_external_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sub_navigation_common_external_text"
                    android:textSize="24sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

