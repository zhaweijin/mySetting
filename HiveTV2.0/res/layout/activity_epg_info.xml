<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.hiveview.tv.view.ProgressDialog
        android:id="@+id/iv_hiveview_loading"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/epg_layout_epghint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/data_no_data"
        android:textSize="46sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/epg_layout_download_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/loading_download_data"
        android:textSize="46sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/ll_white_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="122dip"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="152dip"
            android:layout_height="141dip"
            android:layout_marginLeft="144dip"
            android:layout_marginTop="33dip"
            android:background="@drawable/bg_border_channal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_channel_logo"
                android:layout_width="84dip"
                android:layout_height="45dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dip"
                android:scaleType="fitXY"
                android:src="@drawable/live_channel_logo_default" />

            <TextView
                android:id="@+id/tv_channel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dip"
            android:layout_marginTop="43dip"
            android:layout_toRightOf="@+id/ll" >

            <LinearLayout
                android:id="@+id/ll_week_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:focusable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_week_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/monday"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_date_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_light_line_01"
                    android:layout_width="110dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/light_line"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:focusable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_week_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/tuesday"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_date_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
