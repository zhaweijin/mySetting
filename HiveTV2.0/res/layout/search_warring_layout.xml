<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="750dip"
        android:layout_height="380dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#33000000"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/warring_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_warring"
            android:textColor="#ffffffff"
            android:lines="2"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="80dip"
            android:text="@string/search_warring1"
            android:textColor="#ffffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:text="@string/search_warring2"
            android:textColor="#ffffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:text="@string/search_warring3"
            android:textColor="#ffffffff"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>