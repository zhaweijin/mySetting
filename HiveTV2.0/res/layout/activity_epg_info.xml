                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_week_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/thursday"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_date_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_light_line_04"
                    android:layout_width="110dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/light_line"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:focusable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_week_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/friday"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_date_05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_light_line_05"
                    android:layout_width="110dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/light_line"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:focusable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_week_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/saturday"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_date_06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_light_line_06"
                    android:layout_width="110dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/light_line"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_week_07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:focusable="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_week_07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/sunday"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_date_07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_light_line_07"
                    android:layout_width="110dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/light_line"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_epg_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_white_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dip" >

            <ImageView
                android:id="@+id/iv_posters"
                android:layout_width="132dip"
                android:layout_height="196dip"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/epg_image_default" />

            <TextView
                android:id="@+id/tv_epg_name"
                android:layout_width="400dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dip"
                android:layout_marginTop="50dip"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/iv_posters"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_epg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_epg_name"
                android:layout_marginLeft="27dip"
                android:layout_toRightOf="@+id/iv_posters"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>

       

