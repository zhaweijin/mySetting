<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/devicedetail"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item1_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:gravity="center_vertical"
        android:textColor="@color/grey5_color"
        android:textSize="@dimen/text_size_38" />

    <ImageView
        android:id="@+id/more_img"
        android:layout_width="@dimen/wifi_item_more_img_width"
        android:layout_height="@dimen/wifi_item_more_img_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/right_arrow_itemselector"
        android:layout_marginRight="60dip"
        />

</RelativeLayout>