<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_position"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/position_bg" 
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical" >

<!--
    <ImageView
        android:id="@+id/position_imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        android:src="@drawable/activity_bg" >
    </ImageView>
    -->
  
    <!-- top start -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" 
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/arrow_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/position4_top"/>

        <TextView
            android:id="@+id/top_out"
            android:layout_marginTop="10dip"
            android:text="@string/adjust_out_1"
            style="@style/Zoom_Horizontal" />

        <TextView
            android:id="@+id/top_in"
            android:text="@string/adjust_in_1" 
            style="@style/Zoom_Horizontal" />
    </LinearLayout>
    <!-- top end -->


    <!-- right start -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" 
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/right_in"
            android:focusable="true"
            
            android:text="@string/adjust_in_2" 
            style="@style/Zoom_Vertical" />

        <TextView
            android:id="@+id/right_out"
            android:focusable="true"
            
            android:text="@string/adjust_out_2" 
            style="@style/Zoom_Vertical" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:src="@drawable/position4_right"/>
    </LinearLayout>
    <!-- right end -->


    <!-- bottom start -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" 
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/bottom_in"
            android:focusable="true"
            android:text="@string/adjust_in_1" 
            style="@style/Zoom_Horizontal" />

        <TextView
            android:id="@+id/bottom_out"
            android:focusable="true"
            android:text="@string/adjust_out_1"
            style="@style/Zoom_Horizontal"  />

       <ImageView
            android:id="@+id/arrow_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:src="@drawable/position4_bottom"/>

    </LinearLayout>
    <!-- bottom end -->


    <!-- left start -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/position4_left"/>

        <TextView
            android:id="@+id/left_out"
            android:layout_marginLeft="10dip"
            android:focusable="true"
             
            android:text="@string/adjust_out_2" 
            style="@style/Zoom_Vertical" />

        <TextView
            android:id="@+id/left_in"
            android:focusable="true"
           
            android:text="@string/adjust_in_2"
            style="@style/Zoom_Vertical"  />
    </LinearLayout>
    <!-- left end -->


    <!-- center start -->
    
    <TextView
        android:id="@+id/arrow_center"
        android:layout_width="240dip"
        android:layout_height="220dip"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_style3"
        android:gravity="center"
        android:focusable="true" 
        android:text="@string/sure_adjust"
        android:textSize="30sp"
        android:paddingLeft="50dip"
        android:paddingRight="50dip"
        android:textColor="@android:color/white"/>
    
   <TextView
        android:id="@+id/positionsetting_help"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/screen_adjust_tip_4"
        android:textColor="@color/grey4_color"
        android:textSize="20sp" 
        android:layout_marginBottom="55dip"
        android:layout_marginRight="80dip"
        android:paddingLeft="3dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingRight="3dip"
        />

    <!-- center end -->
	<ImageView 
	       android:id="@+id/positionsetting_help_ic"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/position_help_ic"
	    	android:layout_alignParentBottom="true"
	    	android:layout_marginBottom="80dip"
	    	android:layout_marginLeft="20dip"
	    	android:layout_toLeftOf="@+id/positionsetting_help"/>
	
	 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_rlyout_height"
        android:layout_marginLeft="@dimen/title_rlyout_leftmargin"
        android:layout_marginTop="@dimen/title_rlyout_topmargin"
        android:layoutAnimation="@anim/title_anim_layout" >

        <ImageView
            android:id="@+id/ethernet_left_line"
            android:layout_width="@dimen/title_left_line_width"
            android:layout_height="match_parent"
            android:focusable="false"
            android:src="@drawable/left_line" />

        <LinearLayout
            android:layout_width="@dimen/title_llyout_width"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/ethernet_left_line"
            android:layout_marginLeft="@dimen/title_llyout_leftmargin"
            android:layout_toRightOf="@id/ethernet_left_line"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/screen_adjust"
                android:textColor="@color/settings_ffffff"
                android:textSize="@dimen/text_size_60" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/screen_edge"
                android:textColor="@color/settings_9a9a9a"
                android:textSize="@dimen/text_size_30" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>