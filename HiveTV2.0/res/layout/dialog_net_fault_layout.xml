<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="615dp"
    android:layout_height="310dp"
    android:layout_gravity="center"
    android:background="#99000000" >

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" >

        <LinearLayout
            android:id="@+id/tv_confirm_l"
            android:layout_width="184dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_bg_dialog"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="154dp"
                android:layout_height="44dp"
                android:background="@drawable/dialog_item"
                android:gravity="center"
                android:text="@string/dialog_yes"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_cancel_l"
            android:layout_width="184dp"
            android:layout_height="64dp"
            android:background="@drawable/selector_bg_dialog"
            android:focusable="true"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="154dp"
                android:layout_height="44dp"
                android:background="@drawable/dialog_item"
                android:gravity="center"
                android:text="@string/dialog_no"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>