<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/fl_first_line_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dip"
        android:background="@drawable/select_focus_bg"
        android:focusable="true" >

        <RelativeLayout
            android:layout_width="250dip"
            android:layout_height="222dip"
            android:background="@drawable/select_tv_item_bg" >

            <LinearLayout
                android:id="@+id/ll_onlive_tips"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/live03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="5dip"
                    android:text="直播推荐"
                    android:textSize="18sp"
                    android:color="@color/white" />
            </LinearLayout>

            <com.hiveview.tv.common.myimage.ImageLoadView
                android:id="@+id/iv_thumb"
                android:layout_width="80dip"
                android:layout_height="120dip"
                android:layout_toRightOf="@+id/ll_onlive_tips"
                android:paddingLeft="5dip"
                android:paddingTop="5dip"
                android:src="@drawable/iv_focus_default" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_thumb"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingTop="20dip" >

                <com.hiveview.tv.common.myimage.ImageLoadView
                    android:id="@+id/iv_television_logo"
                    android:layout_width="80dip"
                    android:layout_height="43dip"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/tv_television_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="15dip"
                    android:text="湖南卫视"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_progress"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_alignLeft="@+id/iv_thumb"
                android:layout_below="@+id/iv_thumb"
                android:orientation="vertical" >

                <SeekBar
                    android:id="@+id/sb_television_item"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="4dip"
                    android:focusable="false"
                    android:max="24"
                    android:maxHeight="1.5dip"
                    android:minHeight="0.1dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:progressDrawable="@drawable/player_seekbar_style"
                    android:thumb="@drawable/seekbar_television_thumb"
                    android:thumbOffset="1.0dip" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dip"
                        android:text="23:10" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dip"
                        android:text="23:10" />
                </RelativeLayout>
            </LinearLayout>

            <com.hiveview.tv.view.television.MarqueeText
                android:id="@+id/tv_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_thumb"
                android:layout_below="@+id/ll_progress"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="最美时光 （23）"
                android:textSize="20sp"
                android:color="@color/white" />

            <com.hiveview.tv.view.television.MarqueeText
                android:id="@+id/tv_program_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_thumb"
                android:layout_below="@+id/tv_program"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="23：34    最美时光 （23）"
                android:textSize="18sp"
                android:color="@color/white" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/rl_movie_list_first_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/rl_movie_list_first_line_1_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_list_focus_bg"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.hiveview.tv.common.myimage.ImageLoadView
                android:id="@+id/rl_movie_list_first_line_1_item_image"
                android:layout_width="171.6dip"
                android:layout_height="230.34dip"
                android:background="@drawable/epg_image_default"
                android:scaleType="fitXY" />
        </LinearLayout>

        <com.hiveview.tv.view.television.MarqueeText
            android:id="@+id/rl_movie_list_first_line_1_item_name"
            style="@style/list_item_text_name_value"
            android:layout_width="172dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dip"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_movie_list_first_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/rl_movie_list_first_line_2_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_list_focus_bg"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.hiveview.tv.common.myimage.ImageLoadView
                android:id="@+id/rl_movie_list_first_line_2_item_image"
                android:layout_width="171.6dip"
                android:layout_height="230.34dip"
                android:background="@drawable/epg_image_default"
                android:scaleType="fitXY" />
        </LinearLayout>

        <com.hiveview.tv.view.television.MarqueeText
            android:id="@+id/rl_movie_list_first_line_2_item_name"
            style="@style/list_item_text_name_value"
            android:layout_width="172dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dip"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_movie_list_first_line_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/rl_movie_list_first_line_3_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_list_focus_bg"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.hiveview.tv.common.myimage.ImageLoadView
                android:id="@+id/rl_movie_list_first_line_3_item_image"
                android:layout_width="171.6dip"
                android:layout_height="230.34dip"
                android:background="@drawable/epg_image_default"
                android:scaleType="fitXY" />
        </LinearLayout>

        <com.hiveview.tv.view.television.MarqueeText
            android:id="@+id/rl_movie_list_first_line_3_item_name"
            style="@style/list_item_text_name_value"
            android:layout_width="172dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dip"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_movie_list_first_line_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-2dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/rl_movie_list_first_line_4_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_list_focus_bg"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.hiveview.tv.common.myimage.ImageLoadView
                android:id="@+id/rl_movie_list_first_line_4_item_image"
                android:layout_width="171.6dip"
                android:layout_height="230.34dip"
                android:background="@drawable/epg_image_default"
                android:scaleType="fitXY" />
        </LinearLayout>

        <com.hiveview.tv.view.television.MarqueeText
            android:id="@+id/rl_movie_list_first_line_4_item_name"
            style="@style/list_item_text_name_value"
            android:layout_width="172dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dip"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>